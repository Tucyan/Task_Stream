server {
    listen 80;
    server_name taskstream.xyz;

    # ğŸ”‘ æŒ‡å‘ React æ„å»ºäº§ç‰©ç›®å½•ï¼ˆå¿…é¡»æ˜¯ dist/ï¼ï¼‰
    root /var/www/task-stream/dist;
    index index.html;

    # ğŸ’¨ Gzip å‹ç¼©ä¼˜åŒ– (å¤§å¹…å‡å°‘ä¼ è¾“ä½“ç§¯)
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml application/json application/javascript application/rss+xml application/atom+xml image/svg+xml;

    # ğŸ›¡ï¸ å®‰å…¨å“åº”å¤´
    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-XSS-Protection "1; mode=block";
    add_header X-Content-Type-Options "nosniff";

    # ğŸ“¦ ä¸Šä¼ å¤§å°é™åˆ¶ (æ ¹æ®éœ€æ±‚è°ƒæ•´)
    client_max_body_size 10M;

    # ğŸŒ SPA è·¯ç”±æ”¯æŒï¼ˆReact Router å¿…éœ€ï¼ï¼‰
    location / {
        try_files $uri $uri/ /index.html;
    }

    # ğŸš€ é™æ€èµ„æºä¼˜åŒ–
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff2)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # ğŸ¤– å¿½ç•¥ favicon å’Œ robots çš„æ—¥å¿— (å¯é€‰)
    location = /favicon.ico { log_not_found off; access_log off; }
    location = /robots.txt  { log_not_found off; access_log off; }

    # ğŸ” API ç»Ÿä¸€ä»£ç†
    # ç”±äºæ‰€æœ‰åç«¯æ¥å£å·²æ ‡å‡†åŒ–ä¸º /api/v1/...ï¼Œ
    # æˆ‘ä»¬åªéœ€è¦è¿™ä¸€ä¸ª location å—å³å¯å¤„ç†æ‰€æœ‰ API è¯·æ±‚ã€‚
    location /api/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        
        # â±ï¸ è¶…æ—¶è®¾ç½® (é˜²æ­¢é•¿è¯·æ±‚ä¸­æ–­)
        proxy_connect_timeout 60s;
        proxy_read_timeout 60s;
        proxy_send_timeout 60s;

        # æ”¯æŒ WebSocket (å¦‚æœéœ€è¦)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}
